# UNITARES Governance MCP - Environment Configuration
# Copy to .env and fill in your values

# ===========================================
# DATABASE (Required for persistence)
# ===========================================
DB_BACKEND=postgres                    # postgres | sqlite
DB_POSTGRES_URL=postgresql://governance:changeme@localhost:5432/governance
# DB_SQLITE_PATH=data/governance.db   # Only if using sqlite

# For docker-compose (overrides DB_POSTGRES_URL):
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=governance
POSTGRES_USER=governance
POSTGRES_PASSWORD=changeme             # Change this!

# ===========================================
# REDIS (Optional - for caching)
# ===========================================
REDIS_ENABLED=1                        # 0 to disable
REDIS_URL=redis://localhost:6379/0
# For docker-compose:
REDIS_HOST=redis
REDIS_PORT=6379

# ===========================================
# SERVER
# ===========================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8765

# ===========================================
# AI SERVICES (Optional - for semantic search)
# ===========================================
# HF_TOKEN=hf_xxx                      # HuggingFace (embeddings)
# GOOGLE_AI_API_KEY=xxx                # Gemini
# OPENAI_API_KEY=sk-xxx                # OpenAI
# NGROK_API_KEY=xxx                    # If using ngrok tunnel

# ===========================================
# GOVERNANCE TUNING (Optional)
# ===========================================
# GOVERNANCE_TOOL_MODE=lite            # lite (default) | full | minimal
# UNITARES_PROCESS_UPDATE_RESPONSE_MODE=auto  # auto | minimal | compact | full

# ===========================================
# DEBUGGING (Optional)
# ===========================================
# UNITARES_AUDIT_WRITE_SQLITE=1
# UNITARES_AUDIT_WRITE_JSONL=1
# UNITARES_TOOL_SCHEMA_VERBOSITY=short # short | full
